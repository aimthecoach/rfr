{
  "name": "redux-first-router-boilerplate",
  "description": "Universal Redux-First Router Demo",
  "version": "1.0.0",
  "main": "server/index.js",
  "author": "James Gillmore <james@faceyspacey.com>",
  "license": "MIT",
  "scripts": {
    "start": "npm run clean && cross-env NODE_ENV=development babel-watch src/server/index.js",
    "start:prod": "npm run build && npm run serve",
    "serve": "cross-env NODE_ENV=production node dist/buildServer/index.js",
    "build": "npm run build:client && npm run build:server && npm run build:node",
    "build:client": "rimraf dist/buildClient && cross-env NODE_ENV=production webpack --progress -p --config webpack/client.prod.js",
    "build:server": "rimraf dist/buildServer && cross-env NODE_ENV=production webpack --progress -p --config webpack/server.prod.js",
    "build:node": "cross-env NODE_ENV=production babel src/server/index.js -o dist/buildServer/index.js",
    "clean": "rimraf dist",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "dependencies": {
    "apollo-server-express": "^1.1.2",
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.18.1",
    "chalk": "^2.1.0",
    "compression": "^1.7.0",
    "cors": "^2.8.4",
    "express": "^4.15.2",
    "graphql": "^0.11.3",
    "graphql-date": "^1.0.3",
    "graphql-tools": "^1.2.2",
    "history": "^4.6.3",
    "isomorphic-fetch": "^2.2.1",
    "jsonwebtoken": "^8.0.1",
    "jwt-decode": "^2.2.0",
    "morgan": "^1.8.2",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1",
    "pg": "^7.3.0",
    "react": "^15.4.2",
    "react-apollo": "^1.4.15",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.5",
    "react-universal-component": "^2.5.0",
    "redux": "^3.7.0",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^1.9.15",
    "redux-first-router-link": "^1.1.4",
    "request-ip": "^2.0.2",
    "sequelize": "^4.8.4",
    "styled-components": "^2.1.2",
    "webpack-flush-chunks": "^1.1.22"
  },
  "devDependencies": {
    "autodll-webpack-plugin": "^0.0.7",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^8.0.0",
    "babel-loader": "^7.1.1",
    "babel-plugin-styled-components": "^1.2.0",
    "babel-plugin-universal-import": "^1.2.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-watch": "^2.0.6",
    "commitizen": "^2.9.6",
    "cross-env": "^5.0.1",
    "css-loader": "^0.27.3",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "extract-css-chunks-webpack-plugin": "^2.0.15",
    "husky": "^0.13.2",
    "lint-staged": "^3.4.0",
    "prettier": "^1.4.4",
    "react-hot-loader": "next",
    "rimraf": "^2.6.1",
    "standard": "^10.0.3",
    "stats-webpack-plugin": "^0.5.0",
    "travis-github-status": "^1.4.0",
    "webpack": "^3.5.4",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.18.2",
    "webpack-hot-server-middleware": "^0.1.0",
    "webpack-node-externals": "^1.6.0",
    "write-file-webpack-plugin": "^4.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --single-quote --semi=false --write",
      "eslint --fix",
      "git add"
    ]
  }
}
